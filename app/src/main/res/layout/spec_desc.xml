<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/logoPnp4"
            android:layout_width="139dp"
            android:layout_height="70dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="85dp"
            android:layout_weight="1"
            android:src="@drawable/pitacukai2018"
            android:theme="@style/Base.TextAppearance.AppCompat"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/layoutDevice"
            android:layout_width="267dp"
            android:layout_height="510dp"
            android:layout_below="@+id/logoPnp4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.example.pnp.holoredearapp.TouchImageView
                android:id="@+id/logoPnp3"
                android:layout_width="50dp"
                android:layout_height="404dp"
                android:layout_alignTop="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/spekrev"
                android:theme="@style/Base.TextAppearance.AppCompat"
                android:visibility="invisible" />

        </LinearLayout>

        <TextView
            android:id="@+id/judul"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/logoPnp4"
            android:layout_marginStart="52dp"
            android:visibility="invisible" />

        <!--android:layout_alignParentBottom="true"-->

    </RelativeLayout>
</ScrollView>
